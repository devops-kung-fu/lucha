    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": ["scan", "."]
        },
        {
            "name": "Debug (Recursive)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": ["scan", "--recursive", "."]
        },
        {
            "name": "Debug (Recursive, no path)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": ["scan", "--recursive"]
        },
        {
            "name": "Debug Hookz (Recursive)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": ["scan", "--recursive", "../hookz/"]
        }

    ]
}